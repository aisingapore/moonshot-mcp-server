{
  "name": "@aiverify/moonshot-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AI Verify Moonshot - Natural language interface for LLM testing",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "moonshot-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "mcp",
    "llm",
    "testing",
    "ai-verify",
    "moonshot",
    "benchmarking",
    "red-teaming",
    "model-context-protocol"
  ],
  "author": "AI Verify Foundation",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "google-auth-library": "^9.15.1",
    "natural": "^6.5.0",
    "ora": "^7.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2"
  }
}
