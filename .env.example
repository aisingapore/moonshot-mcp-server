# Query Processor Configuration
# Used to understand natural language test requests

# Option 1: Use Claude via Google Cloud Vertex AI (Recommended)
QUERY_PROCESSOR_PROVIDER=vertex-ai
QUERY_PROCESSOR_MODEL=claude-sonnet-4@20250514
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-east5
# GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json
GCP_SERVICE_ACCOUNT_KEY_PATH=       # OR use Application Default Credentials (recommended)

# Option 2: Use Anthropic API directly
# QUERY_PROCESSOR_PROVIDER=anthropic
# QUERY_PROCESSOR_API_KEY=sk-ant-api03-xxxxx
# QUERY_PROCESSOR_MODEL=claude-3-sonnet-20240229

# Option 3: Use OpenAI
# QUERY_PROCESSOR_PROVIDER=openai
# QUERY_PROCESSOR_API_KEY=sk-xxxxx
# QUERY_PROCESSOR_MODEL=gpt-4

# Option 4: Use local LLM
# QUERY_PROCESSOR_PROVIDER=local
# QUERY_PROCESSOR_BASE_URL=http://localhost:11434
# QUERY_PROCESSOR_MODEL=llama2

# Moonshot API Configuration
MOONSHOT_API_URL=http://localhost:5000
MOONSHOT_API_KEY=
MOONSHOT_DATA_PATH=../revised-moonshot-data

# Default LLM Endpoints for Testing (Optional)
# These will be used if no specific endpoints are configured
DEFAULT_OPENAI_KEY=
DEFAULT_ANTHROPIC_KEY=
DEFAULT_AZURE_OPENAI_KEY=
DEFAULT_AZURE_OPENAI_ENDPOINT=

# AWS Bedrock Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Configuration Directory
CONFIG_DIR=./configs

# Logging
LOG_LEVEL=info
LOG_FILE=./moonshot-mcp.log

# Performance Settings
MAX_CONCURRENT_TESTS=5
TEST_TIMEOUT=300000
RETRY_ATTEMPTS=3